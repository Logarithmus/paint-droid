<?xml version="1.0" encoding="utf-8"?>

<RadioGroup
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolsRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp">
    <RadioButton
            android:text="@string/pen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/penRadioButton"/>
    <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/rectangleRadioButton"
            android:text="@string/rectangle"/>
    <RadioButton
            android:text="@string/oval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/ovalRadioButton"/>
    <RadioButton
            android:text="@string/label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/labelRadioButton"/>
    <RadioButton
            android:text="@string/eraser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/eraserRadioButton"/>
</RadioGroup>